  <%# invitation_path(invitation), %>
  <%# data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<%# %> %>

<%= button_to "Reject", invitation, method: :delete, form: { data: { 'turbo-confirm': 'Are you sure?' } } %>
<% end %>

<ul>
  <% @user_lists.each do |user_list| %>
    <li><%= user_list.list.name %></li>
    User: <%= user_list.user.first_name %>
    <%= link_to "Show list", list_path(user_list.list) %>
    List ID:<%= user_list.list.id %>
  <% end %>
</ul>
<%= simple_form_for [list],
  html: {
    class: 'list-form'
  } do |f| %>
  <%= f.error_notification %>
  <%= f.input :name,
              autofocus: true,
              input_html: { autocomplete: "name" }%>
  <%= f.input :comment %>

  <% if list.image.attached? %>
    <div class="mb-3 current-img">

      <div>
        <p>Current image</p>
        <div>
          <input class="form-check-input" type="checkbox" id="no_image" name="no_image" value="true">
          <label class="form-check-label" for="no_image"> Set List without an image</label>
        </div>
      </div>
        
      <div class="img current-img" style="background-image: url('<%= cl_image_path list.image.key %>')"></div>

    </div>
  <% end %>

  <%= f.input :image,
              label: list.id && list.image.attached? ? 'Replace image' : 'Image',
              input_html: { accept: "image/png, image/jpeg" } %>
  <%= f.submit class: "btn btn-success mt-3" %>
<% end %>
<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-5">

    <h2>Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'forgot-password-form' },
      data: {turbo: false}) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password link", class: "btn btn-outline-warning mt-3" %>
      </div>
    <% end %>

    <%# <%= render "devise/shared/links" %>

  </div>
</div>